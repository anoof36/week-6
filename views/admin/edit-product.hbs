<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-info">Edit Product</h2>
                <form action="/admin/edit-product/?id={{productData._id}}" method="POST" enctype="multipart/form-data">

                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control mb-2" value="{{productData.Name}}">

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control mb-2" value="{{productData.Category}}">

                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control mb-2" value="{{productData.Price}}">

                    <label for="">Image</label>
                    <img src="/product-images/{{productData._id}}.jpg " id="imgView" class="form-control mb-2" style="width: 6rem; height:auto;" alt="">

                    <label for="">change image</label>
                    <input type="file" name="file" class="form-control mb-2" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-5">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>